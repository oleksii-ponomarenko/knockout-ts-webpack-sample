{
	"compilerOptions": {
		"target": "es5",
		"typeRoots": [
			"typings"
		],
		"types": ["reflect-metadata", "knockout-sortable"],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es2015", "dom"],
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": [
		"src/**/*",
		"nightwatch/**/*"
	],
	"filesGlob": [
		"./src/**/*.ts",
		"./test/**/*.ts",
		"!./node_modules/**/*.ts",
		"src/custom_typings.d.ts",
		"typings/browser.d.ts"
	]
}